<div class="container">
  <div class="row">
    <div class="col-4">  
      <div class="card">
        <div class="card-header">
         <h2>Changer votre mot de passe</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "Nouveau mot de passe" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br/>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "Nouveau mot de passe" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirmer votre mot de passe" %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "Nouveau mot de passe" %>
            </div>

            <div class="actions">
              <%= f.submit "Change my password" %>
            </div>
          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
